{% extends 'base.html.twig' %}

{% block title %} Création d'une annonce {% endblock %}

{% block content %}

    <!-- Start Page Title Area -->
    <div class="page-title">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 col-md-12">
                            <h3>Ajouter une actualité</h3>
                            <ul>
                                <li><a href="index.html">Accueil</a></li>
                                <li>/</li>
                                <li>Ajouter une actualité</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Page Title Area -->

    <!-- Start Checkout Area -->
    <section class="checkout-area ptb-80">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h3 class="title">Details</h3>
                    <div class="check-out-box">
                        <form action="#">
                            <div class="row">
                                <div class="col-lg-6 col-md-12">
                                    <div class="form-group">
                                        <lable for="fname">First Name*</lable>
                                        <input type="text" name="fname" id="fname" placeholder="First Name" class="form-control" required>
                                    </div>
                                </div>

                                <div class="col-lg-6 col-md-12">
                                    <div class="form-group">
                                        <lable for="lname">Last Name*</lable>
                                        <input type="text" name="lname" id="lname" placeholder="Last Name" class="form-control" required>
                                    </div>
                                </div>

                                <div class="col-lg-12 col-md-12">
                                    <div class="form-group">
                                        <lable for="cname">Company Name</lable>
                                        <input type="text" name="cname" id="cname" placeholder="Company Name" class="form-control">
                                    </div>
                                </div>

                                <div class="col-lg-6 col-md-12">
                                    <div class="form-group">
                                        <lable for="email">Email*</lable>
                                        <input type="email" name="email" id="email" placeholder="Email" class="form-control" required>
                                    </div>
                                </div>

                                <div class="col-lg-6 col-md-12">
                                    <div class="form-group">
                                        <lable for="phone">Phone*</lable>
                                        <input type="text" name="phone" id="phone" placeholder="Phone" class="form-control" required>
                                    </div>
                                </div>

                                <div class="col-lg-12 col-md-12">
                                    <div class="form-group">
                                        <lable for="country">Country*</lable>
                                        <select name="#" id="" class="form-control" required>
                                            <option>Select Your Country</option>
                                            <option>United States</option>
                                            <option>Brazil</option>
                                            <option>Mexico</option>
                                            <option>Canada</option>
                                            <option>Russia</option>
                                            <option>Argentina</option>
                                            <option>Bolivia</option>
                                            <option>Colombia</option>
                                            <option>Paraguay</option>
                                            <option>Indonesia</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-lg-12 col-md-12">
                                    <div class="form-group">
                                        <lable for="addreess">Addreess*</lable>
                                        <input type="text" name="addreess" id="addreess" placeholder="Addreess" class="form-control" required>
                                    </div>
                                </div>

                                <div class="col-lg-12 col-md-12">
                                    <div class="form-group">
                                        <lable for="addreess">Street addreess</lable>
                                        <input type="text" name="street-addreess" id="street-addreess" placeholder="Apartment, suite, unit etc. (optional)" class="form-control">
                                    </div>
                                </div>

                                <div class="col-lg-12 col-md-12">
                                    <div class="form-group">
                                        <lable for="town/city">Town/City*</lable>
                                        <input type="text" name="town-city" id="town-city" placeholder="Town/City" class="form-control" required>
                                    </div>
                                </div>

                                <div class="col-lg-6 col-md-12">
                                    <div class="form-group">
                                        <lable for="district*">District*</lable>
                                        <select name="#" id="" class="form-control" required>
                                            <option>Select Your District</option>
                                            <option>United States</option>
                                            <option>Brazil</option>
                                            <option>Mexico</option>
                                            <option>Canada</option>
                                            <option>Russia</option>
                                            <option>Argentina</option>
                                            <option>Bolivia</option>
                                            <option>Colombia</option>
                                            <option>Paraguay</option>
                                            <option>Indonesia</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-lg-6 col-md-12">
                                    <div class="form-group">
                                        <lable for="postcode/zip">Postcode/ZIP*</lable>
                                        <input type="text" name="postcode-zip" id="postcode-zip" placeholder="Postcode/ZIP" class="form-control" required>
                                    </div>
                                </div>

                                <div class="col-lg-12 col-md-12">
                                    <div class="form-check">
                                        <input type="checkbox" id="account" name="account" value="account">
                                        <label for="account">Create an account?</label>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="shipping-box">
                        <h3 class="title">Shipping Details</h3>
                        <div class="bottom-line mb-1"></div>
                        <form action="#">
                            <div class="form-check">
                                <input type="checkbox" id="address" name="address" value="address">
                                <label for="address">Ship to a different address</label>
                            </div>
                            <div class="form-group">
                                <lable for="order-notes">Order Notes</lable>
                                <input type="text" class="form-control" name="order-notes" id="order-notes" placeholder="Notes about your order, e.g. special notes for delivery.">
                            </div>
                        </form>
                    </div>
                </div>


            </div>
        </div>
    </section>
    <!-- End Checkout Area -->
{% endblock %}

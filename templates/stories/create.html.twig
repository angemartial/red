{% extends 'base.html.twig' %}

{% block title %} Création d'une annonce {% endblock %}

{% block content %}


    <!-- Start Page Title Area -->
    <div class="page-title">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 col-md-12">
                            <h3>Ajouter une actualité</h3>
                            <ul>
                                <li><a href="index.html">Accueil</a></li>
                                <li>/</li>
                                <li>Ajouter une actualité</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Page Title Area -->

    <!-- Start Checkout Area -->
    <section class="checkout-area ptb-80">
        <div class="container">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h3 class="title">Details</h3>
                    <div class="check-out-box">
                        <div class="row">{{ form_row(form.title) }}</div>
                        <div class="row">{{ form_row(form.slug) }}</div>
                        <div class="row">{{ form_row(form.introduction) }}</div>
                    </div>
                </div>
                <div class="place-order col-lg-12 col-md-12 col-sm-12">
                    {{ form_widget(form.submit) }}
{#                    <button type="submit" class="btn btn-primary">Sauvegarder</button>#}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </section>
    <!-- End Checkout Area -->
{% endblock %}
